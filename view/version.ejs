<!DOCTYPE html>
<html lang="fr">
<head>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script> <!--Optional-->
	<meta charset="UTF-8">
	<title>MY APP</title>
</head>
<body>

	<%
	for(var i=0; i<versions.length; i++){%>
		<span> Version : <%= versions[i] %>  </span> <br>
<%}%>

	<%
	for(var j=0; j<nombres.length; j++){%>
		<span> Nombre de versions : <%= nombres[j] %>  </span> <br>
<%}%>
<div class="container">
   <canvas id="myChart" width="740" height="200"></canvas>
</div>
<script>
    let myChart=document.getElementById('myChart').getContext('2d');
	// Global Options
	Chart.defaults.global.defaultFontFamily='Lato';
	Chart.defaults.global.defaultFontSize=18;
	Chart.defaults.global.defaultFontColor='#777';
	let massPopChart=new Chart(myChart,{	
	     type:'doughnut',//bar , horizontalBar , pie , line , donuts
		 data:{
			labels:<%- JSON.stringify(versions); %>,
			datasets:[{
					label:'Population',
					data:[<%= nombres %>],
					backgroundColor:[
						'rgba(255,99,132,0.6)',
						'rgba(54,162,235,0.6)',
						'rgba(255,206,86,0.6)',
						'rgba(75,192,192,0.6)',
						'rgba(153,102,255,0.6)',
						'rgba(255,159,64,0.6)',
						'rgba(255,99,132,0.6)'					
					],
					borderWidth:4,
					borderColor:'#777',
					hoverBorderWidth:3,
					hoverBorderColor:'#000'		
			
			}]
		 },
		 options:{
			title:{
				display:true,
				text:'Versions',
				fontSize:25			
			},
			legend:{
				display:false,
				position:'right',
				labels:{
					fontColor:'#000'
				}
			
			},
			layout :{
			  padding :{
				left:50,
				right:0,
				bottom:0,
				top:0			
			}
			},
			tooltips:{				
				enabled:true
			}
		 
		 },
	
	});
</script>

</body>

</html>
